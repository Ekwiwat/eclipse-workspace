}
public static int sumOfElementsInLastColumn(int[][] arr){


    for(int row = 0 ; row < arr.length; row++){
        for(int column = 0 ; column <arr[row].length ; column++){
            sum += arr[row][arr.length];
        }
    }
    return sum;

}
}

